//순별로 가져오기.
function sortGo(orderBy){
	
	AutoAddLine.page = 1;
	AutoAddLine.orderby = orderBy;
	AutoAddLine.genreNo = $("#genre_sel").val();
			
	AutoAddLine.addRowTypeEmpty(); // 리스트 비우기.	
	AutoAddLine.callScroll();
	
}

function sortGenre(){
	
	AutoAddLine.page = 1;
	AutoAddLine.genreNo = $("#genre_sel").val();			
			
