		AutoAddLine.dateTo = $("#dateTo").val();
		AutoAddLine.searchMemberNo = $("#searchMemberNo").val();	
		
		AutoAddLine.addRowTypeEmpty(); // 리스트 비우기.			
		AutoAddLine.callScroll();		
	
	}

