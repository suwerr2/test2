		if(!$("#searchMemberNo").val()){
			alert('회원번호를 입력하여주세요');
			$("#searchMemberNo").focus();
			return;
		} 
		if(!$("#dateFrom").val()){
			alert('시작일을 입력하시오');
			$("#dateFrom").focus();
			return;
		} 
